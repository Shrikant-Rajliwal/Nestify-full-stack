                <a class="nav-link"  href="/addListing">Nestify your home</a>
              </li>

             <% if(!curruser){%>
                <li class="nav-item">
                  <a class="nav-link active text" aria-current="page" href="/signup">Signup</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text" href="/login">Login</a>
                </li>
             <% } %>


             <% if(curruser){%>
              <li class="nav-item">
                <a class="nav-link text logout" href="/logout">Logout</a>
              </li>
             <% } %>

              
              
            </ul>
          </div>
        </div>
      </nav>

