  <style>
    .search-btn{
      background-color: #fe424d;
      color: #ffff;
      border: none;
      border-radius: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 40px;
    }
    .search-btn:hover{
      background-color: #fe424d;
      color: #ffff;
      border: none;
      border-radius: 20px;
      
    }
    .search-ip{
      padding: 0.5rem 4rem 0.5rem 4rem;
      border-radius: 15px;
    }
    .italic{
      margin-right: 10px;
    }
  @media only screen and (max-width: 600px) {
    .search-ip{
      display: none;
    }
    .search-btn{
      display: none;
    }
    .navbar-toggler{
      margin-left: auto;
    }
    .fa-brands{
      margin-left: 3px;
    }
    .links{
    display: block;
    }
   .navbar-collapse{
    background-color: #ffff;
    text-align: center;
   }
   .explore{
    margin-left: 40vw;
   }
   .text{
    margin-right: 10vw;
   }
   .logout{
    font-size: 10px;
   }
  }

  </style>

<body>
    
    <nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"> <i class="fa-brands fa-dropbox fa-compass"></i></a>
         
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link explore" href="/">Explore</a>
              </li>
            </ul>
          </div>
          <div>
            <form class="d-flex" role="search">
              <input class="form-control me-2 search-ip" type="search" placeholder="Search your Destination" aria-label="Search">
